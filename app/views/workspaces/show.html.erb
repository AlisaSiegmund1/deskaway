
<div class="leadimage colorline">
 <%= cl_image_tag @workspace.photo%>
</div>

<div class="container flexing">
  <div class="showcard col-md-8">
    <h1><%= @workspace.name %></h1>
    <h3><%= @workspace.address %></h3>
    <h3>🏓  ☕️   🖨   🖥</h3>
    <p><%= @workspace.general_description %></p>
  </div>


  <div class="bookingformshow col-md-4">
    <div>
      <div class="bookinghead">
         <h5>€<strong><%= @workspace.price_per_hour %></strong>,-</h5>
         <h6>Per Hour</h6>
      </div>

      <div class="bookingbody">
          <div class="row">
            <%= simple_form_for [@workspace, @booking] do |f| %>
              <%= f.input :date %>
              <%= f.input :start_time, collection: [0, 1, 2, 3] %>
              <%= f.input :end_time %>
              <%= f.submit "add booking", class: "btn-v3" %>
            <% end %>
          </div>
        <%= @workspace.capacity %>
        <%= @workspace.company %>
      </div>
    </div>
  </div>
</div>





