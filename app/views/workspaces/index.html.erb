
<div class="container">
  <br>
  <% @workspaces.each do |workspace| %>
  <div class="index-card row">

    <div class="index-image col-md-3">
      <%= cl_image_tag (workspace.photo), {class: "card-img roundedleft" }%>
      <p class="category"><%= workspace.company %></p>
    </div>

    <div class="ws-info col-md-7">
      <div class="ws-text">
        <h2 class="ws-title"><%= workspace.name %></h2>
        <p class="ws-address"><%= workspace.address %></p>
        <p class="ws-g-desc"><%= workspace.general_description %></p>
      </div>
      <div class="ws-ut-price">
        <h3>🏓  ☕️   🖨   🖥</h3>
        <h5>€<strong><%= workspace.price_per_hour %></strong>,- p/hour</h5>
      </div>
    </div>

    <div class="ws-owner col-md-2">
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>

  </div>
  <% end %>
</div>




