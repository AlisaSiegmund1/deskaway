<%= simple_form_for (@workspace) do |f| %>
 <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 offset-sm-1">
        <div class="form-edit-profil">
          <h2>Create new Workspace</h2>
          <div class="row d-flex justify-content-between" style="padding: 10px 18px">
            <%= f.input :name, wrapper_html: {class: 'span6', style:'width: 450px'}, required: true, autofocus: true %>
            <%= f.input :company, wrapper_html: {class: 'span6', style:'width: 300px'}, autofocus: true %>
          </div>
            <%= f.input :general_description, required: true, autofocus: true %>
          <div class="row d-flex justify-content-between" style="padding: 10px 18px">
            <%= f.input :address, label: 'Address', wrapper_html: {class: 'span6', style:'width: 450px'}, required: true, autofocus: true%>
            <%= f.input :capacity, wrapper_html: {class: 'span6', style:'width: 150px'}, required: true, autofocus: true %>
            <%= f.input :price_per_hour, wrapper_html: {class: 'span3', style:'width: 150px'}, required: true, autofocus: true %>
          </div>
          <%= render 'utilities' %>

          <%= f.input :photo, required: true, autofocus: true%>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Create Workspace", class: "btn" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
